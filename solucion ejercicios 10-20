//10
{
//perimetro y area de un rectangulo
let base = 5
let altura = 4
let perimetro = altura+altura+base+base //formula para sacar el perimetro y area
let area = altura*base
console.log(perimetro)
console.log(area)
}
//11
{
//area y volumen de cilindro
let r = 2
let h = 8
let pi = 3.1416
let v = pi*(r*r)*h //funcion para calcular volumen
let a = 2*(pi)*r*h+(pi+pi)*(r*r)
console.log(v)
console.log(a)
}
//12
{
//perimetro y area de triangulo
let h = 4
let x = 3
let y = 3
let z = 3
let perimetro = x+y+z //formula para el perimetro y area del triangulo
let area = (h*x)/2
console.log(perimetro)
console.log(area)
}
